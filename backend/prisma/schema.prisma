generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppointmentStatus {
  AGENDADO
  LAVANDO
  ENTREGUE
  CANCELADO
}

enum PaymentStatus {
  PENDENTE
  PAGO
}

enum UserRole {
  ADMIN
  CLIENT
}

model User {
  id        String   @id @default(cuid())
  login     String   @unique
  password  String
  name      String?
  role      UserRole @default(ADMIN)
  clientId  String?  @unique
  client    Client?  @relation(fields: [clientId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id             String         @id @default(cuid())
  name           String
  phone          String
  vehicle        String
  plate          String?
  notes          String?
  approved       Boolean        @default(false)
  appointments   Appointment[]
  user           User?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Service {
  id             String         @id @default(cuid())
  name           String         @unique
  description    String?
  price          Decimal
  durationMin    Int
  appointments   Appointment[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Appointment {
  id            String           @id @default(cuid())
  date          DateTime
  status        AppointmentStatus @default(AGENDADO)
  notes         String?
  washerId      String?           // ID do lavador (quando multi-lavador ativo)

  clientId      String
  client        Client           @relation(fields: [clientId], references: [id])

  serviceId     String
  service       Service          @relation(fields: [serviceId], references: [id])

  payment       Payment?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model Payment {
  id             String         @id @default(cuid())
  status         PaymentStatus  @default(PENDENTE)
  amount         Decimal
  paidAt         DateTime?
  appointmentId  String         @unique
  appointment    Appointment     @relation(fields: [appointmentId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model IntegrationSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GeneralSettings {
  id                    String   @id @default(cuid())
  multiWasher           Boolean  @default(false)
  workStartHour         Int      @default(8)
  workEndHour           Int      @default(18)
  workDays              String   @default("1,2,3,4,5,6") // 0=domingo, 1=segunda, etc
  closedDates           String?  // JSON array de datas fechadas
  maxConcurrentBookings Int      @default(1) // Quantos agendamentos simultâneos (multi-lavador)
  washers               String?  // JSON array de lavadores [{id, name}]
  adminPhone            String?  // Telefone do administrador para notificações
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

